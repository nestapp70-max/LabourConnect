// server/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  password   String
  role       Role
  wallet     Int      @default(0)

  jobs       Job[]
  bids       Bid[]
  reviews    Review[]
  messages   Message[]
  chats      Chat[]

  payments   Payment[]

  createdAt  DateTime @default(now())
}

enum Role {
  customer
  technician
}

model Job {
  id          String   @id @default(cuid())
  customerId  String
  technicianId String? 

  title       String
  description String
  budget      Int
  status      JobStatus @default(pending)

  customer    User       @relation(fields: [customerId], references: [id])
  technician  User?      @relation(fields: [technicianId], references: [id])

  bids        Bid[]
  reviews     Review[]

  createdAt   DateTime @default(now())
}

enum JobStatus {
  pending
  assigned
  completed
  cancelled
}

model Bid {
  id        String   @id @default(cuid())
  jobId     String
  technicianId String
  amount    Int
  message   String?

  job       Job  @relation(fields: [jobId], references: [id])
  technician User @relation(fields: [technicianId], references: [id])

  createdAt DateTime @default(now())
}

model Review {
  id        String   @id @default(cuid())
  jobId     String
  userId    String
  rating    Int
  comment   String?

  job       Job  @relation(fields: [jobId], references: [id])
  user      User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}

model Chat {
  id        String   @id @default(cuid())
  user1Id   String
  user2Id   String

  user1     User @relation("ChatUser1", fields: [user1Id], references: [id])
  user2     User @relation("ChatUser2", fields: [user2Id], references: [id])

  messages  Message[]

  createdAt DateTime @default(now())
}

model Message {
  id      String   @id @default(cuid())
  chatId  String
  senderId String
  text    String

  chat    Chat @relation(fields: [chatId], references: [id])
  sender  User @relation(fields: [senderId], references: [id])

  createdAt DateTime @default(now())
}

model Payment {
  id        String   @id @default(cuid())
  userId    String
  orderId   String
  paymentId String
  status    String
  amount    Int?

  user      User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}
